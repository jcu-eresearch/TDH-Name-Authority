{
    "harvester": {
        "type": "csv",
        "csv": {
            "fileLocation": "${fascinator.home}/data/hr_data/people_diff.csv",
            "idColumn": "ID",
            "recordIDPrefix": "jcu.edu.au/parties/people/",
            "headerRow": true,
            "delimiter": ",",
            "ignoredFields": [],
            "includedFields" : ["ID", "Given_Name", "Other_Names", "Family_Name", "Pref_Name", "Honorific", "Email", "Job_Title", "GroupID_1", "GroupID_2", "GroupID_3", "ANZSRC_FOR_1", "ANZSRC_FOR_2", "ANZSRC_FOR_3", "URI", "NLA_Party_Identifier", "ResearcherID", "openID", "Personal_URI", "Personal_Homepage", "Staff_Profile_Homepage", "Description", "Old_ID"]
        }
    },

    "transformer": {
        "curation": ["local"],
        "metadata": ["ingest-relations", "jsonVelocity"]
    },
    "curation": {
       "neverPublish": false,
       "alreadyCurated": false,
       "requiredIdentifiers": [
           "local",
           "nla"
       ],
       "identifierDataMapping": {
         "general": {
           "title": "${data.Family_Name}, ${data.Given_Name}",
           "type": "person"
         },
         "nla": {
           "description": "${data.Description}",
           "url": "${data.Personal_Homepage}",
           "surname": "${data.Given_Name}",
           "forename": "${data.Family_Name}",
           "division": "",
           "school": "",
           "salutation": "${data.Honorific}"
         }
       }
    },
    "transformerOverrides": {
        "ingest-relations": {
            "sourcePid": "metadata.json",
            "sourcePath": ["data"],
            "relations": {
                "GroupID_1": {
                    "prefix": "jcu.edu.au/parties/group/",
                    "relation": "isMemberOf",
                    "reverseRelation": "hasMember"
                },
                "GroupID_2": {
                    "prefix": "jcu.edu.au/parties/group/",
                    "relation": "isMemberOf",
                    "reverseRelation": "hasMember"
                },
                "GroupID_3": {
                    "prefix": "jcu.edu.au/parties/group/",
                    "relation": "isMemberOf",
                    "reverseRelation": "hasMember"
                }
            }
        },
        "local": {
            "template": "${server.url.base}published/detail/[[OID]]"
        },
        "jsonVelocity": {
            "templatesPath" : "${fascinator.home}/templates/people",
            "portalId": "Parties_People"
        }
    },

    "indexer": {
        "script": {
            "type": "python",
            "rules": "Parties_People_TDH.py"
        },
        "params": {
            "repository.name": "People",
            "repository.type": "Parties"
        }
    }
}
