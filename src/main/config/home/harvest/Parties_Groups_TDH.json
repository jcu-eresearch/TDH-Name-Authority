{
    "harvester": {
        "type": "csv",
        "csv": {
            "fileLocation": "${fascinator.home}/data/hr_data/groups_diff.csv",
            "idColumn": "ID",
            "recordIDPrefix": "jcu.edu.au/parties/group/",
            "headerRow": true,
            "delimiter": ",",
            "ignoredFields": [],
            "includedFields" : ["ID", "Name", "Email", "Phone", "Parent_Group_ID", "URI", "NLA_Party_Identifier", "Homepage", "Description"]
        }
    },

    "transformer": {
        "curation": ["local"],
        "metadata": ["ingest-relations", "jsonVelocity"]
    },
    "curation": {
        "neverPublish": false,
        "alreadyCurated": false,
        "requiredIdentifiers": [
           "local"
        ],
        "identifierDataMapping": {
      "general": {
        "title": "${data.Name}",
        "type": "group"
      }
    }
    },

    "transformerOverrides": {
        "ingest-relations": {
            "sourcePid": "metadata.json",
            "sourcePath": ["data"],
            "relations": {
                "Parent_Group_ID": {
                    "prefix": "jcu.edu.au/parties/group/",
                    "relation": "isPartOf",
                    "reverseRelation": "hasPart"
                }
            }
        },
        "local": {
            "template": "${server.url.base}published/detail/[[OID]]"
        },
        "jsonVelocity": {
            "templatesPath" : "${fascinator.home}/templates/groups",
            "portalId": "Parties_Groups"
        }
    },

    "indexer": {
        "script": {
            "type": "python",
            "rules": "Parties_Groups.py"
        },
        "params": {
            "repository.name": "Groups",
            "repository.type": "Parties"
        }
    }
}
